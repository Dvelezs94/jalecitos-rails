<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "Jalecitos",
  "short_name": "Jalecitos",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "pwa_192.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#27825f",
  "background_color": "#27825f",
  "display": "standalone",
  "orientation": "portrait",
  "start_url" : "/mobile_sign_in"
}
