$(document).on('turbolinks:load', function() {
  if ($("#cardForm").length > 0 || $("#new_order").length > 0 ) {
    OpenPay.setId("<%= ENV.fetch('OPENPAY_MERCHANT_ID') %>");
    OpenPay.setApiKey("<%= ENV.fetch('OPENPAY_PUBLIC_KEY') %>");
    <% if ENV.fetch('OPENPAY_PROD') %>
      OpenPay.setSandboxMode(false);
    <% else %>
      OpenPay.setSandboxMode(true);
    <% end %>
    //Antifraud
    if($("#cardForm").length > 0){
    var deviceSessionId = OpenPay.deviceData.setup("cardForm", "device_id");
    }
    else{
    var deviceSessionId = OpenPay.deviceData.setup("new_order", "device_id");
    }
  }
});
