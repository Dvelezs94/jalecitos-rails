$(document).on('turbolinks:load', function() {
  displayLocInput();
  $(".choose_or_any").change(displayLocInput);
});

function displayLocInput() {
  if ($('#chooseCity').prop('checked')) { //user choose city
    $("#form_autocomplete").closest(".twitter-typeahead").css("display", "block");
    //set again the deleted city_id if existed
    if (window.city_val)
    {
      $("#form_autocomplete_id").val(window.city_val);
    }
  }
  else { //user doesnt choose city
    $("#form_autocomplete").closest(".twitter-typeahead").css("display", "none");
    //i have to delete city_id
    window.city_val = $("#form_autocomplete_id").val();
    $("#form_autocomplete_id").val("");
  }
}
