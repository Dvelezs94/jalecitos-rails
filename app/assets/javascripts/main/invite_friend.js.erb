// Share API action
$(document).on('turbolinks:load', function() {

  $('#invite-friend').click(function (event) {
    let url = "https://www.jalecitos.com/sign_up/";
    elem='#invite-friend';
    desk="¡Unete a Jalecitos y oferta tus servicios en linea hoy mismo!";
    text=`Únete a Jalecitos y oferta tus servicios en línea hoy mismo en ${url}`;
    confirmation = "La invitación ha sido copiada. ¡Compartela con tus amigos para que se unan!";
    share_content(elem,desk,text,confirmation, url);
    event.preventDefault();
  });

  $('.want_review').click(function (event) {
    let url = document.location.href;
    elem='.want_review'
    desk="¡Te agradecería si me das un comentario positivo en mi Jale!"
    text=`Te agradecería si me das un comentario positivo en mi Jale: ${url}`
    confirmation = "La solicitud ha sido copiada. ¡Compartela con tus clientes para que comenten tu Jale!"
    share_content(elem,desk,text,confirmation, url);
    event.preventDefault();
  });
  $(".share_item_url").on("click", function(event) { //iif you want to change to dynamic object event, need to check the url of meta info in admin because it breaks (needs double click to copy link)
    event.preventDefault();
    let url = this.href;
    elem='.share_item_url'
    desk=""
    text=`${url}`
    confirmation = "La url ha sido copiada. ¡Compartela con las personas!"
    share_content(elem,desk,text,confirmation, url);
  });
});
