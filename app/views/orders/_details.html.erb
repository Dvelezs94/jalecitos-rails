<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_MAP_API']}&libraries=places&callback=activatePlacesSearch", :defer => true, :async => true %>
  <div class="form-group details-form">
      <label class="check-btn"> Esta orden es a domicilio
        <input type="checkbox" class="form-check-input" id="showlocation" onclick="$('.order-location').toggle();">
       <span class="checkmark"></span>
      </label>
    <div class="order-location">
      <%= f.text_field :address, class: 'text_box form-control grey-input', id: "google_autocomplete", size: 200, placeholder: "Escribe tu direccion" %>
      <div class="gmap-canvas">
        <iframe width="100%" height="450" id="mapPreview" frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=<%= ENV.fetch('GOOGLE_MAP_API') %>&q=mexico"
        allowfullscreen>
      </iframe>
      </div>
    </div>

    <div class="form-group">
      <label for="comment" class="details-label">Informacion extra</label>
      <%= f.text_area :details, class: "form-control grey-input", placeholder: "Informacion util para el experto", rows: 5 %>
    </div>
  </div>
