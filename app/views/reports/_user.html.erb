<div class="modal" id="reportUserModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
         <div class="sign-up">
             <div class="sign-up-form">
               <h4>Reportar Usuario</h4>

               <div class="divi-new js-form-join-section" data-section="1"></div>
               <%= form_with model: Report, url: user_report_path(user), id: "ReportUserForm", remote: true do |f| %>
                 <%= f.select :cause, @report_options, {include_blank: "Cual es la causa del reporte"}, class: "custom-select required" %>
                 <%= f.text_field :comment, placeholder: "(Opcional) Comentarios" %>
                 <br>
                 <%= f.submit 'Continuar', :class => 'btn btn-success' %>
               <% end %>
             </div>
         </div>
      </div>
    </div>
  </div>
</div>
