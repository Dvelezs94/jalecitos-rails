<% if @success %>
  alert("Tu reporte ha sido enviado y lo revisaremos a la brevedad.");
<% elsif @too_many_today %>
  alert("Has reportado muchos elementos por hoy, estamos revisándolos.");  
<% elsif params[:report][:cause] == "" %>
  alert("Asegúrate de proporcionar una causa del reporte.");
<% else %>
  alert("Ya has reportado este contenido y lo estamos revisando.");
<% end %>

<% if params[:report][:cause] != "" %> //close if sent or already sent
  $(".modal").hide();
  $(".reportForm :input").val(""); //empty the values
<%end  %>
