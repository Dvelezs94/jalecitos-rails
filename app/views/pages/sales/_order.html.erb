<tr class="body_table" valign="middle">
  <% if order.purchase_type == "Package" %>
  <td class="buyer">
    <h5><%= order.purchase ? link_to(order.employer.slug, user_path(order.employer.slug)) : "Borrado" %></h5>
  </td>
  <td><%= order.purchase ? link_to("Voy a #{order.purchase.gig.name}", user_gig_path(order.purchase.gig.user, order.purchase.gig)) : "Borrado" %></td>
  <td><%= order.purchase ? order.purchase.pack_type : "Borrado" %></td>
  <% else %>
  <td class="buyer">
  <h5><%= link_to order.purchase.request.user.slug, user_path(order.purchase.request.user.slug) %></h5>
  </td>
  <td><%= link_to order.purchase.request.title, request_path(order.purchase.request) %></td>
  <td>Pedido</td>
  <% end %>
  <td><%= order.created_at %></td>
  <td><%= order.total %> MXN</td>
  <td><%= order.uuid.first(4) %></td>
  <td>
    <span class="<%= order.status.downcase %>"><%= order.status %></span>
  </td>
  <td>
    <% if order.pending? %>
      <% if order.started_at? %>
      <%= link_to fa_icon("undo", title: "Denegar Trabajo", class: "fa-lg"), refund_order_path(order.id), method: :put, :data => {:confirm => 'Seguro que quieres Reembolsar?'} %>
      <% else %>
        <%= link_to fa_icon("undo", title: "Denegar Trabajo", class: "fa-lg"), refund_order_path(order.id), method: :put, :data => {:confirm => 'Seguro que quieres Reembolsar?'} %>
        <%= link_to fa_icon("play", title: "Solicitar Comenzar", class: "fa-lg"), request_start_order_path(order.id), :method => :put %>
      <% end %>
    <% elsif order.in_progress? %>
      <% if order.completed_at? %>
        <%= link_to fa_icon("exclamation-circle", title: "Abrir Disputa", class: "fa-lg"), new_order_dispute_path(order.uuid) %>
        <%= link_to fa_icon("undo", title: "Reembolsar Trabajo", class: "fa-lg"), refund_order_path(order.id), method: :put, :data => {:confirm => 'Seguro que quieres Reembolsar?'} %>
      <% else %>
        <%= link_to fa_icon("undo", title: "Reembolsar Trabajo", class: "fa-lg"), refund_order_path(order.id), method: :put, :data => {:confirm => 'Seguro que quieres Reembolsar?'} %>
        <%= link_to fa_icon("check-circle", title: "Solicitar Finalizacion", class: "fa-lg"), request_complete_order_path(order.id), :method => :put %>
      <% end %>
    <% elsif order.disputed? %>
      <%= link_to fa_icon("arrow-circle-right", title: "Ir al caso", class: "fa-lg"), order_dispute_path(order.uuid, order.dispute) %>
    <% end %>
  </td>
</tr>
