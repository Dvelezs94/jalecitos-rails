<% if current_user && with_number == false %>
  <% if gig.likes.select{|l| l.user_id == current_user.id}.present? %>
    <%= link_to "#{icon('fas', 'heart medium-icon', title: 'Me gusta', class: 'like')}".html_safe, gig_like_path(gig.slug), method: :delete, class: 'like', remote: true %>
  <% else %>
    <%= link_to "#{icon('fas', 'heart medium-icon', title: 'Me gusta', class: 'unlike')}".html_safe, gig_like_path(gig.slug), method: :post, class: 'unlike', remote: true %>
  <% end %>
<% elsif current_user %>
  <% if gig.likes.select{|l| l.user_id == current_user.id}.present? %>
    <%= link_to "#{gig.likes.length}  #{icon('fas', 'heart medium-icon', title: 'Me gusta', class: 'like with_number')}".html_safe, gig_like_path(gig.slug), method: :delete, class: 'like', remote: true %>
  <% else %>
    <%= link_to "#{gig.likes.length if gig.likes.length > 0}  #{icon('fas', 'heart medium-icon', title: 'Me gusta', class: 'unlike with_number')}".html_safe, gig_like_path(gig.slug), method: :post, class: 'unlike', remote: true %>
  <% end %>
<% else %>
  <% if gig.likes.length > 0 %>
  <%= link_to "#{gig.likes.length}#{icon('fas', 'heart medium-icon', title: 'Me gusta', class: 'unlike')}".html_safe, "#", method: :post, class: 'unlike disabled-by-text', remote: true %>
  <% end %>
<% end %>
