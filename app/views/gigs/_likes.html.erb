<% if current_user && current_user.likes?(gig) %>
  <%= link_to fa_icon("thumbs-up", title: "Me gusta", class: "like"), user_gig_like_path(gig.user.slug, gig.slug), method: :delete, remote: true %>
<% else %>
  <%= link_to fa_icon("thumbs-up", title: "Me gusta", class: "dislike"), user_gig_like_path(gig.user.slug, gig.slug), method: :post, remote: true %>
<% end %>
