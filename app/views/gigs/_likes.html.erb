<% if current_user && gig.likes.select{|l| l.user_id == current_user.id}.present? %>
  <%= link_to icon("fas", "heart medium-icon", title: "Me gusta", class: "like"), gig_like_path(gig.slug), method: :delete, remote: true %>
<% else %>
  <%= link_to icon("fas", "heart medium-icon", title: "Me gusta", class: "unlike"), gig_like_path(gig.slug), method: :post, remote: true %>
<% end %>
