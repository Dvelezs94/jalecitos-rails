<% if current_user && gig.likes.select{|l| l.user_id == current_user.id}.present? %>
  <%= link_to "#{gig.likes.length}  #{icon('fas', 'heart medium-icon', title: 'Me gusta', class: 'like')}".html_safe, gig_like_path(gig.slug), class: 'like', method: :delete, remote: true %>
<% else %>
  <%= link_to "#{gig.likes.length if gig.likes.length > 0}  #{icon('fas', 'heart medium-icon', title: 'Me gusta', class: 'unlike')}".html_safe, gig_like_path(gig.slug), class: 'unlike', method: :post, remote: true %>
<% end %>
