<% if current_user && gig.likes.select{|l| l.user_id == current_user.id}.present? %>
  <%= link_to "#{gig.likes.count}  #{icon('fas', 'heart medium-icon', title: 'Me gusta', class: 'like')}".html_safe, gig_like_path(gig.slug), method: :delete, remote: true %>
<% else %>
  <%= link_to "#{gig.likes.count if gig.likes.count > 0}  #{icon('fas', 'heart medium-icon', title: 'Me gusta', class: 'unlike')}".html_safe, gig_like_path(gig.slug), method: :post, remote: true %>
<% end %>
