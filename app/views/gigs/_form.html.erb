<%= form_with(model: gig,url: gig_form_url_helper, method: gig_form_method_helper, local: true) do |form| %>
  <% if gig.errors.any? %>
  <%gig.errors.full_messages.each do |error| %>
    <%= notification_generator_helper error %>
  <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>

    <%= form.text_field :description, class: 'form-control', id: "description", type: "hidden" %>
    <trix-editor input="description"></trix-editor>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select(:category_id, Category.all, :id, :name,
         {
              include_blank: true
        },
        class: 'form-control'
    ) %>
  </div>


  <div class="form-group">
    <%= form.text_field :location,
                         class: 'form-control',
                         size: 50,
                         placeholder: 'Busca tu ciudad...',
                         id: 'autocomplete' %>
  </div>
  <div class="form-group">
    <%= form.file_field :image, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= form.label :tags %>
    <div class="tags-input" data-name="tags-input">

    </div>    
  </div>




  <div class="form-group">
    <%= form.submit "Guardar y continuar",  class: "btn btn-primary btn-block" %>
  </div>
<% end %>
