<% if params[:reviews].present? %>

  $(".paginated_reviews").append('<%= j render(partial: "shared/reviews/review", collection: @reviews) %>');

  <% if @reviews.next_page %>

    $(".page3-viewmore").append('<%= j link_to_next_page(@reviews, "Ver más#{icon("fas", "angle-down")}".html_safe,class: "review_paginator" ,remote: true) %>');
  <% else %>
    $(".page3-viewmore").remove();
  <% end %>

<% else %>

  $(".paginated_requests").append('<%= j render(partial: "shared/reviews/request", collection: @requests) %>');

  <% if @requests.next_page %>

    $(".page3-viewmore").append('<%= j link_to_next_page(@reviews, "Ver más#{icon("fas", "angle-down")}".html_safe,class: "review_paginator" ,remote: true) %>');
  <% else %>
    $(".page3-viewmore").remove();
  <% end %>

<% end %>



<% sleep 1 %>
