<%= link_to 'Atrás', :back %>

<div class="card col-md-6">
  <div class="card-header">
    <%=@gig.category.name%>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%=@gig.name%></h5>
    <p class="card-subtitle mb-2 text-muted"><%=@gig.user.first_name if @gig.user_id != current_user.id%></p>
    <small class="text-muted"><%=@gig.location%></small>
    <%= image_tag image_display_helper(@gig.image_url),  class: "card-img-top" %>
    <p class="card-text"><%=@gig.description.html_safe%></p>
    <div class="btn-group">
      <%= link_to status_text_helper(@gig), toggle_status_gig_path(@gig), class: "btn btn-sm btn-outline-secondary" unless @gig.banned? %>
      <%= link_to "Editar", edit_gig_path(@gig), class: "btn btn-sm btn-outline-secondary" if @gig.user_id == current_user.id %>
      <%= link_to "Borrar", @gig, method: :delete,
       data: { confirm: '¿Estás seguro de querer borrar este trabajo?' },
        class: "btn btn-sm btn-outline-secondary" if @gig.user_id == current_user.id  %>
    </div>
  </div>
</div>
