<div class="top-gig innerpages3-area">
  <% if current_user && current_user.active? && (@gig.gig_packages.none? || @gig.draft?) %>
  <div class="alert alert-warning alert-dismissible fade show text-center" role="alert" style="margin-bottom:0 !important;">
    <% if @gig.gig_packages.none? %>
      <%= link_to("Agrega paquetes al Jale para publicarlo.", edit_gig_path(city_slug(@gig.city),@gig))%>
    <% else %>
      <%= link_to("¡Tu jale está listo para publicarse! <br> Haz click aquí para publicarlo.".html_safe, toggle_status_gig_path(@gig)) %>
    <% end %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-7 small-padding">
        <div class="innerpage-leftside">
        <%= render 'shared/gigs/show/gig_info' %>
        <%= render 'shared/gigs/show/package_info', device: "phone-tablet" %>
        <%= render 'shared/gigs/show/reviews' %>
        </div>
      </div>
      <div class="col-lg-4 col-md-5">
        <!-- only in computer -->
        <%= render 'shared/gigs/show/package_info', device: "computer" %>
        <%= render 'shared/gigs/show/user_card_info' %>
      </div>
    </div>
  </div>
  <%= gig_carousel( "Jales Relacionados", :related_gigs) %>
</div>
<%= render 'reports/report', object: @gig %>
