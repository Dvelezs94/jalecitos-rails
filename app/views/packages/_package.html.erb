<% if @show_packages == true  && package.name != "" && package.description != "" && package.price != nil%>
  <div class="tab-pane fade  <%= "active show" if package.pack_type == "basic" %>" id="<%= "#{package.pack_type}#{device}"%>" role="tabpanel" aria-labelledby="<%= package.pack_type %>-tab">
    <div class="earnlist-mewrapt">
      <div class="earnlist-me">
        <p class="limpi1"><%= package.name %></p>
        <p class="limpi2"><%=number_to_currency(purchase_order_total(package.price), precision: 2) %><sub>MXN</sub></p>
        <pre> <p class="limpi3"><%= package.description %></p> </pre>
      </div>
      <div class="page3-btn">
        <%= link_to("Contratar", hire_user_gig_package_path(@gig.user, @gig, package)) %>
      </div>
    </div>
  </div>
<% else %>
  <% @show_packages = false %>
<% end  %>
