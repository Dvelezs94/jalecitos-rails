<% if package.name != "" && package.description != "" && package.price != "" && show==true%>
  <div class="col-md-4">
    <div class="card mb-4 box-shadow">
      <div class="card-body">
        <p class="card-title"><%=package.name%></p>
        <p class="card-subtitle mb-2 text-muted"><%=number_to_currency(package.price)%></p>
        <p class="card-text"><%=package.description.html_safe%></p>
        <div class="d-flex justify-content-between align-items-center">
        </div>
      </div>
    </div>
  </div>
<% else %>
  <% show = false %>
<% end  %>
