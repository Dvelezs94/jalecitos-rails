<% if @success %>
  <% if params[:action] == "update_packages" && ! @gig.published? %>
    <% flash[:notice] = 'Tu servicio se ha actualizado exitosamente y está listo para que lo publiques' %>
  <% elsif params[:action] == "update_packages" %>
    <% flash[:notice] = 'Tu servicio se ha actualizado exitosamente' %>
  <% elsif params[:action] == "create" && current_user.banned? %>
    <% flash[:notice] = 'Tu servicio se ha guardado pero no será publicado ya que tu cuenta está bloqueada' %>
  <% else %>
    <% flash[:notice] = 'Tu servicio se ha publicado exitosamente' %>
  <% end %>
  window.location = "<%= the_gig_path(@gig) %>"
<% else %>
  alert("Ha ocurrido un error, por favor, inténtelo más tarde");
<% end %>
