<% if @success %>
  <% if params[:action] == "update_packages" && ! @gig.published? %>
    <% flash[:notice] = 'Tu Jale se ha actualizado exitosamente y está listo para que lo publiques' %>
  <% elsif params[:action] == "update_packages" %>
    <% flash[:notice] = 'Tu Jale se ha actualizado exitosamente' %>
  <% else %>
    <% flash[:notice] = 'Tu Jale se ha publicado exitosamente' %>
  <% end %>
  window.location = "<%= gig_path(@gig) %>"
<% elsif @active_orders %> //used in update
  <% flash[:alert] = 'Tus paquetes no pudieron ser actualizados ya que hay ordenes en activo.' %>
  window.location = "<%= gig_path(@gig) %>"
<% else %>
  alert("Ha ocurrido un error, por favor, inténtelo más tarde");
<% end %>
