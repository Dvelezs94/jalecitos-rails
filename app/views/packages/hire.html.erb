<div class="pedido-area">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="pedido-text">
          <h2>
            <span>
              <i class="fa fa-arrow-left" aria-hidden="true" onclick="javascript:history.go(-1);"></i>
            </span>Tu compra está casi lista…</h2>
        </div>
        <div class="cualquier-text del-ex">
          <%= render "shared_user/hire/disclaimer" %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= form_for @order, url: orders_path do |f| %>
<div class="checkout-all-area">
  <div class="container">
    <div class="row">
      <%= render "shared_user/hire/checkout_cart", f: f%>
      <%= render "shared_user/hire/summary_package", f: f  %>
    </div>
  </div>
</div>
<%= render "shared_user/hire/mobile_bottom_pay" %>
<% end %>
