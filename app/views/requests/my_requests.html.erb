<div class="container-fluid sales_manage">
  <div class="section container">

    <div class="row">

      <div class="col-lg-12  col-md-12">
        <h3>Mis Pedidos</h3>
      </div>
    </div>

    <div class="row my_requests">
      <div class="col-lg-12  col-md-12">

        <ul class="tabs nav nav-tabs">
          <li>
            <a href="#r_open">Abiertos</a>
          </li>
          <li>
            <a href="#r_in_progress">En progreso</a>
          </li>
          <li>
            <a href="#r_completed">Completados</a>
          </li>
          <li>
            <a href="#r_closed">Cerrados</a>
          </li>
        </ul>
        <div class="tabContainer requests_collection">
          <div class="tabWrap ">
            <div class="tabContainer">
              <div class="gap"></div>

              <div id="r_open" class="tabContent">
                <div class="row align_center">
                  <div class="col-lg-12 align_center">
                    <div class="row align_center">
                      <%= render partial: "requests/request", collection: @requests.open %>
                    </div>
                  </div>
                </div>
              </div>
              <div id="r_in_progress" class="tabContent">
                <div class="row align_center">
                  <div class="col-lg-12 align_center">
                    <div class="row align_center">
                      <%= render partial: "requests/request", collection: @requests.in_progress %>
                    </div>
                  </div>
                </div>
              </div>
              <div id="r_completed" class="tabContent">
                <div class="row align_center">
                  <div class="col-lg-12 align_center">
                    <div class="row align_center">
                      <%= render partial: "requests/request", collection: @requests.completed %>
                    </div>
                  </div>
                </div>
              </div>

              <div id="r_closed" class="tabContent">
                <div class="row align_center">
                  <div class="col-lg-12 align_center">
                    <div class="row align_center">
                      <%= render partial: "requests/request", collection: @requests.closed %>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
