<%= @current = params[:current] %>
<% if @current == "r_open" %>
  <% @collection = @r_open %>
<% elsif @current == "r_in_progress" %>
  <% @collection = @r_in_progress %>
<% elsif @current == "r_completed" %>
  <% @collection = @r_completed %>
<% else %>
  <% @collection = @r_closed %>
<% end %>

$(".paginated_"+ '<%= j @current %>').append('<%= j render partial: "requests/request", collection: @collection %>');

<% if @collection.next_page %>
  $('.pagination:visible').replaceWith('<%= j paginate(@collection) %>');
<% else %>
  $('.pagination:visible').remove();
<% end %>
<% sleep 1 %>
