<div class="card" style="width: 70%; padding: 10px; margin: 20px auto;">
  <div class="card-body">
    <h5 class="card-title"><%= @request.name %></h5>
    <p class="card-text"><%= @request.description %></p>
    <p class="card-text">Presupuesto: <%= number_to_currency(@request.budget.to_i) %> MXN</p>
    <p><small class="text-muted"><%=@request.location%></small></p>
    <p><small class="text-muted">Publicado hace <%= distance_of_time_in_words(@request.created_at, Time.now) %></small></p>
    <% if current_user.id == @request.user_id %>
     <hr>
     <%= link_to 'Edit', edit_user_request_path(@request.user_id, @request) %> |
     <%= link_to 'Back', :back %>
    <% elsif has_offered(current_user.id)  %>
     <p class="text-muted">Tu oferta esta postulada</p>
    <% else %>
     <%= link_to 'Postularse', new_user_request_offer_path(@request.user_id, @request), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= render @request.offers %>
