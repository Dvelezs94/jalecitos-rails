<% m_diff = 10 %><%#difference of minutes when i want to display again an user image between his messages%>
<% if @prev_created_at.nil? || @prev_created_at.to_date != message.created_at.to_date %>
<div class="chat-group-divider"><%= message.created_at.strftime("%b %e, %Y") %>
</div>
<% end %>
<% minute_difference = (@prev_created_at.present?)? (message.created_at  - @prev_created_at)/1.minute : message.created_at %>

<div class="media">
  <div class="avatar avatar-sm avatar-online <%= "invisible"if minute_difference <= m_diff %>">
    <%= image_tag(avatar_display_helper(message.user.image_url(:thumb)), class: "rounded-circle avatar-initial") %>
  </div>
  <div class="media-body" title="<%= distance_of_time_in_words_to_now(message.created_at)%>" >
    <% if minute_difference > m_diff %>
    <h6><%= message.user.alias %>
      <small><%= distance_of_time_in_words_to_now(message.created_at) %></small>
    </h6>
    <% end %>
    <p><%= message.safe_body%></p>

    <% if message.image? %>
      <p><%= link_to(image_tag(message.image_url, class: "wd-80 ht-80"), message.image_url, data: {lity: true} ) %></p>
    <% end %>
    <% if message.related_to.present? %>
      <% item = message.related_to %>
        <a href="<%= message.related_to_type == "Gig"? the_gig_path(item) : request_path(item) %>">
          <div class="bd bg-gray-50 pd-y-15 pd-x-15 pd-sm-x-20">
          <span class="tx-15 mg-b-3 tx-black">Relacionado a:
            <%= message.related_to.title %></span>
          </div>
        </a>
      <% end %>

    </div>
    <!-- media-body -->
  </div>
<% @prev_created_at = message.created_at %><%# this messagw now is the previous in new loop%>
