<!DOCTYPE html>
<html lang="es">

  <head>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'favicon' %>
    <%= stylesheet_link_tag 'guest', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Card Anti Fraud System -->
    <!-- <script type="text/javascript" src="https://openpay.s3.amazonaws.com/openpay.v1.min.js"></script> <script type="text/javascript" src="https://resources.openpay.mx/lib/openpay-data.v1.min.js"></script> -->
    <%= javascript_include_tag 'guest', 'data-turbolinks-track': 'reload' %>

    <!-- For PWA -->
   <link rel="manifest" href="/manifest.json" />
   <meta name="apple-mobile-web-app-capable" content="yes">
   <!--  -->


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <% if @gig.present? && current_page?( user_gig_path(@gig.user, @gig) ) %>
      <title><%= "#{@gig.profession} en #{@gig.location} para #{@gig.name}"%></title>
      <meta name="description" content="<%= "#{@gig.profession} en #{@gig.location} para #{@gig.name}. Contrata hoy expertos en #{@gig.category.name} en Jalecitos" %>" >
      <meta name="keywords" content="<%= "#{@gig.tag_list.join(",")},#{@gig.location},#{@gig.profession}" %>" >
      <meta name='category' content= <%= "#{@gig.category.name}" %> >
    <% else %>
      <title>Jalecitos</title>
      <meta name="description" content=" " >
      <meta name="keywords" content="" >
    <% end %>
  </head>

  <body id="page-top">
    <div class="main_container">
      <%= notification_helper %>
      <%= render 'shared/main_nav_bar' %>
      <% if  ! (current_page?(root_path) || current_page?(new_user_session_path)) || params[:query] %>
        <div class="gap"></div>
      <% end  %>
      <%= yield %>
      <%= render 'shared_guest/log/sessions'%>
    </div>
    <%= render 'shared/main_footer' %>
  </body>
</html>
