<% if @need_cause %>
  show_error("Necesitas proporcionar una causa para el bloqueo");
<% elsif @already_banned %>
  <% flash[:notice] = "Este recurso ya había sido bloqueado" %>
  location.reload();
<% elsif @treated_report %>
  <% flash[:notice] = "Este recurso ya había sido tratado" %>
  location.reload();
<% elsif @openpay_error %>
  <% flash[:error] = @openpay_error %>
  location.reload();
<% elsif @success %>
  <% flash[:success] = "se ha bloqueado el recurso" %>
  location.reload();
<% end %>
