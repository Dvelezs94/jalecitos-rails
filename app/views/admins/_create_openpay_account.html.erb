<div class="modal" id="createOpenpayAccountModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content-transparent">
      <div class="modal-body">
         <div class="sign-up">
             <div class="sign-up-form">
               <h3>Crear Usuario de Openpay</h3>
               <%= form_with url: create_openpay_user_admins_path, local: true do |form| %>
                 <%= form.text_field :name, placeholder: "Nombre" %>
                 <%= form.text_field :email, placeholder: "Email" %>
                 <%= form.submit %>
               <% end %>
             </div>
         </div>
      </div>
    </div>
  </div>
</div>
