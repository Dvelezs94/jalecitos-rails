<div class="modal recommendationModal" id="recommendationModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
         <div class="sign-up">
             <div class="sign-up-form">
               Recomendaci√≥n
               <%= form_with(model: Review, url: review_path, method: :post, :html => { class: "review_form" }) do |f| %>
               <div class="row justify-content-center">
                 <div class="col-lg-12 col-md-12 col-sm-12 col-12 justify-content-center row">
                   <%= image_tag(avatar_display_helper(@gig.user.image_url(:thumb)), class: "review-avatar") %>
                 </div>
                 <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                   <%= @gig.user.alias %>
                 </div>
               </div>
                 <div class="row">
                   <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                     <%# rating_for Review, 'Employee', disable_after_rate: false %>
                   </div>
                   <div class="gap"></div>
                   <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                     <%= f.text_area :comment, placeholder: "Comentario (Opcional)", style: "margin-top: 15px;",
                      class: "form-control" , rows: 2, maxlength: 2000 %>
                   </div>
                 </div>

                 <%= f.submit 'Enviar', :class => 'btn continue-button w-100', style: "margin-top: 15px;",
                  :onclick => '$(".review_form").valid()? $("#reviewModal").fadeOut("fast", function() { $(this).remove(); } ) : null;' %>
                 <br>
               <% end %>

             <hr>
             <p>
               <%= link_to "Omitir por ahora", root_path, id: "closeReview" %>
             </p>
             </div>
         </div>
      </div>
    </div>
  </div>
</div>
