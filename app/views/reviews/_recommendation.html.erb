<div class="modal recommendationModal" id="recommendationModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="sign-up">
          <div class="sign-up-form">
            <div id="tell_us_recommendation" class="truncate">
            <strong><%= @gig.name.capitalize %></strong>
            </div>
            <%= form_with(model: Review, url: reviews_path, method: :post, :html => { class: "review_form" }) do |f| %>
            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-12"></div>
              <div class="gap"></div>
              <div class="col-lg-12 col-md-12 col-sm-12 col-12">
              <%= f.fields_for :rating_attributes do |r| %>
                <%= r.hidden_field :stars, value: "5", id: "recommendation_stars" %>
              <% end %>
              <%= f.hidden_field :reviewable_id, value: @gig.id %>
              <%= f.text_area :comment, placeholder: "¿Qué es lo que recomiendas de este Jale?", id: "recommendation_comment",style: "margin-top: 15px;", class: "form-control" , rows: 2, maxlength: 2000 %>
            </div>
          </div>
          <hr>
          <div class="flex-space-bet">
            <%= f.submit 'Publicar', :class => 'btn btn-success', :onclick => '$(".review_form").valid()? $("#reviewModal").fadeOut("fast", function() { $(this).remove(); } ) : null;' %>
            <%= link_to root_path, class: "closeModals" do %>
            <%= button_tag "Cerrar", class: "btn btn-light", id: "closeRecommendation", style: "border:1px solid #D3D3D3" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
</div>
