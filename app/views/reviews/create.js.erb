$(".recommendation").fadeOut("fast", function() { $(this).remove(); } );
$(".recommendationModal").remove();
if (<%= @success %>){
  show_success("Gracias por tu opinión");
}
else{
  show_error("<%= @review.errors.full_messages.first || "Ha ocurrido un error inesperado, por favor, inténtalo más tarde" %>")
}
