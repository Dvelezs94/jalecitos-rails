if (<%= @success %>){
  $(".modal").css("display", "none");
  show_success("Se ha editado tu comentario");
  $(".paginated_reviews").find("[review-id="+ "<%= @review.id %>" + "]").remove();
  $(".paginated_reviews").prepend("<%= j render(partial: 'shared/reviews/review', collection: [@review]) %>");
  display_reviews(true);
  $('html, body').animate({
    scrollTop: ($(".servicoteam-wrap").offset().top-200)
  }, 1000);
}
else{
  show_error("<%= @review.errors.full_messages.first || "Ha ocurrido un error inesperado, por favor, inténtalo más tarde" %>")
}
