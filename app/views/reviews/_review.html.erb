<!-- The Modal -->
<div class="modal reviewmodal" id="reviewModal" >

  <!-- Modal content -->
  <div class="modal-content">
    <!-- <span class="close">&times;</span> -->
    <div class="text-center">

      <div class="row">

        <div class="col-lg-12">

          <%= (current_page?(root_path))? "<h4>Valoraci√≥n pendiente</h4>".html_safe : "<h4>Califica al usuario</h4>".html_safe %>

          <%= form_with(model: review, url: review_path(review), method: :patch, :html => { class: "review_form" }) do |f| %>
          <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12 justify-content-center row">
              <%= image_tag(avatar_display_helper(review.giver.image_url(:thumb)), class: "review-avatar") %>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
              <%= review.giver.alias %>
            </div>
          </div>
            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <%= rating_for review, (review.order.employee_id == current_user.id)? 'Employer' : 'Employee', disable_after_rate: false %>
              </div>
              <div class="gap"></div>
              <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <%= f.text_area :comment, placeholder: "Comentario (Opcional)",
                 class: (review.order.employer == current_user && review.order.purchase_type == 'Package')? "form-control" : "form-control hidden", rows: 2, maxlength: 2000 %>
              </div>
            </div>
            <div class="gap"></div>

            <%= f.submit 'Enviar', :class => 'btn btn-success', :onclick => '$(".review_form").valid()? $("#reviewModal").fadeOut("fast", function() { $(this).remove(); } ) : null;' %>
            <br>
          <% end %>

        <hr>
        <p>
          <%= link_to "Omitir por ahora", root_path, id: "closeReview" %>
        </p>
      </div>
    </div>
  </div>

</div>

</div>
