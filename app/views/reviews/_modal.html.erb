<!-- The Modal -->
<div class="modal reviewmodal" id="reviewModal" >

  <!-- Modal content -->
  <div class="modal-content">
    <!-- <span class="close">&times;</span> -->
    <div class="container text-center">

      <div class="row">

        <div class="col-lg-12">

          <h4>Califica al usuario</h4>

          <%= form_for(:user, :html => { :class => "sign_in_form" }, :url => session_path(:user)) do |f| %>
          <div class="row justify-content-center">
            <%= image_tag(avatar_display_helper(@review.giver.image_url(:thumb)), class: "review-avatar") %>
          </div>
            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <%= rating_for @review, 'Employee' %>
              </div>
              <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                Comentario (Opcional)
              </div>
              <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <%= f.text_area :comment %>
              </div>
            </div>
            <%= f.submit 'Enviar', :class => 'btn btn-success' %>
            <br>
          <% end %>

        <hr>
        <p>Omitir por ahora
        </p>
      </div>
    </div>
  </div>

</div>

</div>
