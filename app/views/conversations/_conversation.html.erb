<div class="chat-right-side-text" data-conversation-id="<%= conversation.id %>">
    <div class="Harold-Bates-text">
        <h3><%= link_to icon("fa", "arrow-left"), conversations_path %> <%= opposite_user.alias %><span>Activo hace <%= opposite_user.current_sign_in_at != nil ? distance_of_time_in_words_to_now(opposite_user.current_sign_in_at) : "nunca" %></span></h3>
    </div>
<!--
    <div class="chat-right-side-date">
        <span>Febrero 18</span>
    </div>
-->
<div class="message_view_box nicescroll">
  <%= paginate @messages %>
  <ul class="messages-list">
  <%= render 'conversations/conversation_content', messages: @messages.sort %>
  </ul>
</div>



<div class="right-bottom-chat-write">
    <div class="bottom-chat-write">
      <%= form_for [@conversation, Message.new], remote: true do |f| %>
      <label for="message_image">
        <%= icon("fas","paperclip", class: "fa-2x", title: "Adjuntar imagen", id: "attach-i")  %>
        <%= f.file_field :image, accept: ".jpg, .jpeg, .png", style: "display: none;" %>
        <label id="file-name" title="borrar imagen"></label>
      </label>
      <%= f.text_field :body, autofocus: true, size: 499 %>
      <%= button_tag( :class => "btn btn-success send-message", id: "send-message") do %>
      <%= "enviar" %>
        <% end %>
      <% end %>
    </div>
</div>
