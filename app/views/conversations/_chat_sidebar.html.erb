<div class="chat-sidebar">

  <div class="chat-sidebar-header">
    <div class="col-12 dropdown-link">
      <input type="text" class="form-control" placeholder="Buscar contacto" filter-conversation>
    </div>
  </div>
  <!-- chat-sidebar-header -->

  <!-- start sidebar body -->
  <div class="chat-sidebar-body">

    <div class="flex-fill pd-y-20 pd-x-10 bd-t">
      <div class="chat-msg-list" contacts-list>

        <% @users.each do |user| %>
          <%= render partial: "conversation_min", locals: { user: user } %>
        <% end %>

        <%= paginate @conversations, param_name: :conversation %>

      </div>
      <!-- media-list -->
    </div>
  </div>
  <!-- chat-sidebar-body -->
  <div class="chat-sidebar-footer">
    <div class="d-flex align-items-center">
      <div class="avatar avatar-sm avatar-online mg-r-8"><%= image_tag(avatar_display_helper(current_user.image_url(:thumb)), class: "rounded-circle") %></div>
      <h6 class="tx-semibold mg-b-0 truncate mw-130px"><%= current_user.alias %></h6>
    </div>
    <div class="d-flex align-items-center">
      <a href="">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-settings">
