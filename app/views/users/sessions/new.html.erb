<div class="container">

<div class="media align-items-stretch justify-content-center ht-100p pos-relative">
  <div class="media-body align-items-center d-none d-lg-flex">
    <div class="mx-wd-600">
      <img src="https://via.placeholder.com/1260x950" class="img-fluid" alt="">
    </div>
  </div>
  <!-- media-body -->
  <div class="sign-wrapper mg-lg-l-50 mg-xl-l-60">
    <div class="wd-100p">
      <h3 class="tx-color-01 mg-b-5">Inicio de sesión</h3>
      <p class="tx-color-03 tx-16 mg-b-40">Inicia sesión para poder continuar</p>
      <%= form_for(:user, :html => { :class => "sign_in_form" }, :url => session_path(:user)) do |f| %>
      <div class="form-group">
        <label>Email</label>
        <%= f.email_field :email, placeholder: "ejemplo@gmail.com", class: "form-control required", value: "", autofocus: true, autocomplete: "username",onfocus: "getLocation();", tabindex: 1 %>
      </div>
      <div class="form-group">
        <div class="d-flex justify-content-between mg-b-5">
          <label class="mg-b-0-f">Contraseña</label>
          <%= link_to "¿Olvidaste tu contraseña?", new_password_path(:user), class:"tx-13" %>
        </div>
        <%= f.password_field :password, placeholder: "Escribe tu contraseña" , class: "form-control required", autocomplete: "current-password", tabindex: 2 %>
      </div>
      <div class="form-group custom-control custom-checkbox">
        <% if (controller.controller_name == "sessions" && cookies.permanent.signed[:mb].present? ||controller.controller_name == "mobiles" ) %>
          <%= f.check_box :remember_me, :checked => true, :class => 'd-none' %>
        <% else %>
          <%= f.check_box :remember_me, :checked => false, class: "custom-control-input" %>
          <label class="custom-control-label" for="user_remember_me">Recordarme</label>
        <% end %>
      </div>
      <%= f.submit 'Entrar', class: "btn btn-brand-02 btn-block", :data => { :disable_with => "Entrando..." } %>
    <% end %>
    <div class="divider-text">o</div>
    <%= button_to user_facebook_omniauth_authorize_path(lat:"latitude", lon:"longitude"), form_class: 'facebook-login btn-block', class: "btn btn-outline-facebook btn-block", :data => { :disable_with => "Entrando..." } do %>
    Entrar con Facebook
  <% end %>
  <%= button_to user_google_oauth2_omniauth_authorize_path(lat:"latitude", lon:"longitude"), form_class: 'google-login btn-block', class: "btn btn-outline-google btn-block", :data => { :disable_with => "Entrando..." } do %>
  Entrar con Google
<% end %>
<div class="tx-13 mg-t-20 tx-center">¿No tienes una cuenta?
  <%= link_to "Regístrate",params[:controller] == "mobiles"? mobile_sign_up_path : new_user_registration_path %>
</div>
</div>
</div>
<!-- sign-wrapper -->
</div>
<!-- media -->
</div>
