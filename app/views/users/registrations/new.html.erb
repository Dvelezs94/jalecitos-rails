<div class="container">

<div class="media align-items-stretch justify-content-center ht-100p">
  <div class="sign-wrapper mg-lg-r-50 mg-xl-r-60">
    <div class="pd-t-20 wd-100p">
      <h4 class="tx-color-01 mg-b-5">Crea una cuenta</h4>
      <p class="tx-color-03 tx-16 mg-b-40">Es gratis y sólo te tomará un minuto</p>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "sign_up_form" }) do |f| %>
      <div class="form-group">
        <label>Email</label>
        <%= f.email_field :email, placeholder: "Ingresa tu email", class: "form-control required", autocomplete: :off, autofocus: true, onfocus: "getLocation();" %>
      </div>
      <div class="form-group">
        <div class="d-flex justify-content-between mg-b-5">
          <label class="mg-b-0-f">Contraseña</label>
        </div>
        <%= f.password_field :password, placeholder: "Nueva contraseña", id: "user_password_new", class: "form-control required", autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <div class="d-flex justify-content-between mg-b-5">
          <label class="mg-b-0-f">Confirma tu contraseña</label>
        </div>
        <%= f.password_field :password_confirmation, placeholder: "Confirmar contraseña", class: "form-control required", autocomplete: "new-password" %>

      </div>
      <div class="form-group d-flex justify-content-center">
        <% if ENV.fetch("RAILS_ENV") == "production" %>
          <%= recaptcha_tags %>
        <% else %>
          El captcha solo se muestra en producción
        <% end %>
      </div>

      <div class="form-group tx-12">
        Al continuar aceptas los
        <%= link_to "Terminos y Condiciones", terminos_y_condiciones_path, target: "_blank" %>
        así como el
        <%= link_to "Aviso de Privacidad", aviso_de_privacidad_path, target: "_blank" %>
      </div>
      <!-- form-group -->
      <%= f.button 'Crear cuenta', class: "btn btn-p-purple-100 btn-block", :data => { :disable_with => "Creando..." } %>
    <% end %>
    <div class="divider-text">o</div>
    <%= button_to user_facebook_omniauth_authorize_path(lat:"latitude", lon:"longitude"), form_class: 'facebook-login btn-block', class: "btn btn-outline-facebook btn-block", :data => { :disable_with => "Entrando..." } do %>
    Entrar con Facebook
  <% end %>
  <%= button_to user_google_oauth2_omniauth_authorize_path(lat:"latitude", lon:"longitude"), form_class: 'google-login btn-block', class: "btn btn-outline-google btn-block", :data => { :disable_with => "Entrando..." } do %>
  Entrar con Google
<% end %>
<div class="tx-13 mg-t-20 tx-center">¿Ya tienes una cuenta?
  <%= link_to "Inicia sesión", new_user_session_path %>
</div>
<div class="tx-13 mg-t-20 tx-center">
  ¿No recibiste las<%= link_to " instrucciones de confirmación de cuenta", new_confirmation_path(resource_name) %>?
</div>
</div>
</div>
<!-- sign-wrapper -->
<div class="media-body d-none d-lg-flex pos-relative">
<div class="mx-lg-wd-500 mx-xl-wd-550">
  <%= image_tag image_path("signup.png"), width: 550, height: 700%>
</div>
</div>
<!-- media-body -->
</div>
<!-- media -->
</div>
