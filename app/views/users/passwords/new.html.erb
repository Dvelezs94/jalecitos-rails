<div class="row" style="height: 60vh;align-items:center;">
  <div class="modal-content" style="text-align:center;height:auto;max-width:400px;padding:10px;">

    <h3>¿Olvidaste tu contraseña?</h3>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: :off, class: "form-control", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Enviar instrucciones", class: "btn btn-success form-control" %>
    </div>
    <hr>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>
