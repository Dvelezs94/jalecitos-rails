<div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
  <form>
    <div class="form-group row">
      <div class="col-sm-2 d-flex justify-content-end">
        <div class="avatar avatar-lg"><img src="https://source.unsplash.com/random?sig=1" class="rounded-circle" alt=""></div>
      </div>
      <div class="col-sm-10 pd-t-15">
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="customFile">
          <label class="custom-file-label" for="customFile">Cambiar foto de perfil</label>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label tx-right">Email</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" value="diego@diego.com" disabled>
      </div>
    </div>
    <div class="form-group row">
      <label for="user_phone" class="col-sm-2 col-form-label tx-right">Alias (@)</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label tx-right">Sitio Web</label>
      <div class="col-sm-10">
        <input type="tel" class="form-control" placeholder="">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label tx-right">Bio</label>
      <div class="col-sm-10">
        <textarea name="name" rows="2" class="form-control"></textarea>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label tx-right">Habilidades</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="userTags" data-role="tagsinput">
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 col-form-label tx-right">Teléfono</label>
      <div class="col-sm-10">
        <div class="input-group">
          <input id="userphone" type="text" class="form-control" placeholder="+52 555 555 5555">
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2 tx-right">Whatsapp</div>
      <div class="col-sm-10">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck1">
          <label class="custom-control-label" for="customCheck1">Habilitar para éste número</label>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 col-form-label tx-right">Fecha de nacimiento</label>
      <div class="col-sm-10">
        <div class="input-group">
          <input id="userbirth" type="text" class="form-control" placeholder="yyyy/mm/dd">
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 col-form-label tx-right">Ubicación de negocio</label>
      <div class="col-sm-10">
        <div class="input-group">
          <input type="text" class="form-control">
        </div>
      </div>
    </div>
    <div class="form-group row mg-b-0">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </form>
</div>
