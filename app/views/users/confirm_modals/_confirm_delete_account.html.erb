<div class="modal" id="confirmAccountDeletionModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
         <div class="sign-up">
             <div class="sign-up-form ">
               <!-- Close modal -->
                 <div class="close-modal" onclick="$('#confirmAccountDeletionModal').hide()">
                   <span aria-hidden="true">Cerrar</span>
                 </div>
               <!--  -->
               <%= form_with url: user_disable_path, method: :post, local: true do |f| %>
               <h3>¿Estás seguro? Esta operación es irreversible.</h3>
                <% if current_user.provider.nil? %>
                  <%= f.password_field :password, placeholder: "Digita tu contraseña actual" %>
                <% else %>
                  <%= f.submit "Si, cancelar cuenta", class: "default-deny-btn",:data => {:confirm => 'Por última vez, ¿estás seguro de cancelar tu cuenta?'} %>
                <% end %>
               <% end %>
             </div>
         </div>
      </div>
    </div>
  </div>
</div>
