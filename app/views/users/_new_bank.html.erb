<!-- The Modal -->
<div class="modal inmodal" id="bankModal">

  <!-- Modal content -->
  <div class="modal-content modal-configuration">
    <!-- <span class="close">&times;</span> -->
    <div class="text-center">

      <div class="row">

        <div class="col-lg-12">

          <h4>Nuevo Banco</h4>

          <div class="divi-new js-form-join-section" data-section="1"></div>
          <%= form_with url: user_banks_path(current_user), class: "new_bank" do |f| %>
            <%= f.number_field :clabe, class: "required", placeholder: "CLABE", minlength: 18, maxlength: 18 %>
            <%= f.text_field :bank_holder_name, class: "required", placeholder: "Nombre del Titular" %>
            <%= f.text_field :alias, class: "required", placeholder: "Alias" %>
            <br>
            <%= f.submit 'Continuar', :class => 'btn btn-success' %>
          <% end %>

      </div>
    </div>
  </div>

</div>

</div>
