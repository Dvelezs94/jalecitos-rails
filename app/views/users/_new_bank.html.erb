<div class="modal" id="bankModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
         <div class="sign-up">
             <div class="sign-up-form">
                <h3>Nuevo Banco</h3>
                <div class="divi-new js-form-join-section" data-section="1"></div>
                <%= form_with url: user_banks_path(current_user), class: "new_bank" do |f| %>
                  <%= f.text_field :clabe, class: "required", placeholder: "CLABE",  maxlength: "18", onkeypress: "allowNumbersOnly(event)" %>
                  <%= f.text_field :bank_holder_name, class: "required", placeholder: "Nombre del Titular" %>
                  <%= f.text_field :alias, class: "required", placeholder: "Alias" %>
                  <br>
                  <%= f.button 'Continuar', :class => 'btn btn-success', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Guardando.."} %>
                <% end %>
             </div>
             <hr>
             <div class="">
                Soportado por  <%= image_tag("https://s3.us-east-2.amazonaws.com/cdn.jalecitos.com/images/openpay_logos/logo_negro_openpay.png", class: "openpay-logo") %>
             </div>
         </div>
      </div>
    </div>
  </div>
</div>
