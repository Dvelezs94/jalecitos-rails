  <%= form_with model: @user, url: user_registration_path, html: { id: "change-pass-form",method: :put } do |f| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label tx-right">Contrase単a Actual</label>
      <div class="col-sm-10">
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', required: "true" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label tx-right">Nueva Contrase単a</label>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: "true"  %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label tx-right">Confirmar nueva Contrase単a</label>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: "true" %>
      </div>
    </div>

    <div class="form-group row mg-b-0">
      <div class="col-sm-10">
        <%= f.submit "Cambiar contrase単a", class: 'btn btn-p-purple-100' %>
