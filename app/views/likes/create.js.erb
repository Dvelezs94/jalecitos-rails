show_success("El Jale se ha agregado a tus favoritos");
item = $(".likes-<%= j @gig.slug %>");
if( item.find(".with_number").length > 0 ) {
  item.html("<%= j render 'gigs/likes', gig: @gig, with_number: true %>")
}
else {
  item.html("<%= j render 'gigs/likes', gig: @gig, with_number: false %>")
}
