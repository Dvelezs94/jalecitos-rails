<!-- The Modal -->
<div class="modal" id="joinModal">

  <!-- Modal content -->
  <div class="modal-content">
    <!-- <span class="close">&times;</span> -->
    <div class="container text-center">

      <div class="row">

        <div class="col-lg-12">

          <h4>Join Jalecitos</h4>

          <div class="fb_signin">
            <%= fa_icon "facebook" %>
            <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, style: "color: white;" %>
          </div>

          <!-- <div class="google_signin">
            <%= fa_icon "google" %>
            <span>Continue with Google</span>
          </div> -->
          <div class="divi-new js-form-join-section" data-section="1">
            <span>OR</span></div>
          <%= form_for(:user, :url => session_path(:user)) do |f| %>
            <%= f.text_field :email, placeholder: "Email" %>
            <%= f.password_field :password, placeholder: "Contrasena" %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            <br>
            <%= f.submit 'Continuar', :class => 'btn btn-success' %>
            <br>
            <%= link_to "Olvide mi contrasena", new_password_path(:user) %>
          <% end %>
        <p>By joining I agree to receive emails from Jalecitos.
        </p>

        <hr>
        <p>Already a member?
          <a href="#">Sign In</a>
        </p>
      </div>
    </div>
  </div>

</div>

</div>
