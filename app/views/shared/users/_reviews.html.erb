<div class="profile-sidebar mg-t-40 mg-lg-t-0 pd-lg-l-25" pag-and-list>

      <div class="d-flex align-items-center justify-content-between mg-b-20">
        <h6 class="tx-13 tx-spacng-1 tx-uppercase tx-semibold mg-b-0"><%= "Sin " if @reviews.empty? %>Reseñas</h6>
      </div>
      <ul class="list-unstyled media-list mg-b-15" paginated-reviews>
        <%= render partial: "shared/users/review", collection: @reviews, as: "review" %>
      </ul>
      <nav paginator-container>

        <%= link_to_next_page(@reviews, "Mostrar más <i data-feather='chevron-down' class='mg-l-2 mg-r-0 mg-t-2 feather-12'></i>".html_safe,
        param_name: :reviews, remote: true, data: {disable_with: "Cargando..."}, class: "link-03 d-inline-flex align-items-center") %>
      </nav>



</div><!-- profile-sidebar -->
