<div class="rightsidetab-total">
  <div class="rightsidetab-content">
    <ul class="nav nav-tabs" id="profile_tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="gigs-tab" data-toggle="tab" href="#gigs" role="tab" aria-controls="gigs" aria-selected="true"><%= @gigs.total_count %> Jales</a>
      </li>
      <% if @user == current_user %>
      <li class="nav-item">
        <a class="nav-link" id="requests-tab" data-toggle="tab" href="#requests" role="tab" aria-controls="requests" aria-selected="false"><%= @requests.total_count %> Pedidos</a>
      </li>
      <% end %>
      <li class="nav-item">
        <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false"><%= @reviews.total_count %> ReseÃ±as</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="gigs" role="tabpanel" aria-labelledby="gigs-tab">
        <div class="row">
          <%= render partial: 'shared/users/gig', collection: @gigs %>
          <%= "<div style='margin-top: 10px;'>No hay nada para mostrar</div>".html_safe if @gigs.total_count == 0 %>
        </div>
      </div>
      <% if @user == current_user %>
      <div class="tab-pane fade paginator-container" id="requests" role="tabpanel" aria-labelledby="requests-tab">
        <div class="row paginated-requests">
          <%= render partial: 'shared/users/request', collection: @requests %>
          <%= "<div style='margin-top: 10px;'>No hay nada para mostrar</div>".html_safe if @requests.total_count == 0 %>
        </div>
        <%= paginate @requests, param_name: :requests  %>
      </div>
      <% end %>
      <div class="tab-pane fade paginator-container" id="reviews" role="tabpanel" aria-labelledby="profile-tab">
        <div class="row paginated-reviews">
          <%= render partial: 'shared/users/review', collection: @reviews %>
          <%= "<div style='margin-top: 10px;'>No hay nada para mostrar</div>".html_safe if @reviews.total_count == 0 %>
        </div>
        <%= paginate @reviews, param_name: :reviews  %>
      </div>
    </div>
  </div>
</div>
