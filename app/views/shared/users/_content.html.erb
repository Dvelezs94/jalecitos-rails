<div class="rightsidetab-total">
  <div class="rightsidetab-content">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="gigs-tab" data-toggle="tab" href="#gigs" role="tab" aria-controls="gigs" aria-selected="true"><%= @gigs.count %> Jales</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false"><%= @reviews.count %> Calificaciones</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="gigs" role="tabpanel" aria-labelledby="gigs-tab">
        <%= render partial: 'shared/users/gig', collection: @gigs %>
        <%= "No hay nada para mostrar" if @gigs.count == 0 %>
      </div>

      <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="profile-tab">
        <%= render partial: 'shared/users/review', collection: @reviews %>
        <%= "No hay nada para mostrar" if @reviews.count == 0 %>
      </div>
    </div>
  </div>
</div>
