<li class="media">
  <%= link_to user_path(review.giver.slug) do %>
  <div class="avatar">
    <%= image_tag(avatar_display_helper(review.giver.image_url(:thumb)), class: "rounded-circle") %>
  </div>
<% end %>

<div class="media-body pd-l-15">
  <%= link_to user_path(review.giver.slug) do %>
  <p class="tx-medium mg-b-0 tx-black truncate"><%= review.giver.alias %>
    <span class="tx-warning">
      <i data-feather="star" class="feather-12 tx-warning filled tx-warning filled"></i>
      <%= review.prof_rating.stars.to_i %>
    </span>
  </p>
<% end %>
<div>
  <span class="text-break"><%= review.comment %></span>

</div>
</div>
</li>
