    <h6 class="tx-uppercase tx-semibold mg-b-0">Servicios</h6>
  </div><!-- card-header -->
  <div class="card-body pd-25">
    <div class="row" paginated-gigs>
      <%= render partial: "shared/users/gig", collection: @gigs, as: "gig" %>
    </div><!-- row -->
  </div><!-- card-body -->
