<div class="col-xl-6 col-lg-6">
  <a href="<%= request_path(request.slug) %>">
    <div class="riktos-wrapper">
      <div class="singleriktos">
        <div style="display: flex; justify-content: space-between;">
          <p class="fof truncate"><%= request.location%></p>
          <h5 class="req-status req-<%= request.status %>"><%= t "requests.status.#{request.status}" %></h5>
        </div>
        <p class="jkl truncate"><%= request.title %></p>
        <!-- <p class="jhh multi-line-truncate-2 min-height-32px"><%# request.description %></p> -->
        <span><%= request.offers.count %> ofertas</span>
        <div style="display: flex; justify-content: space-between;">
          <p class="yii">Publicado hace <%= distance_of_time_in_words_to_now(request.created_at) %></p>
          <div class="points">
            <p><%= request.budget %></p>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
