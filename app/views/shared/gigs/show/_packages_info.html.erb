<ul class="nav nav-line nav-justified" id="packages" role="tablist">
<% @gig.gig_packages.each_with_index do |package, n|  %>
  <% if package.name != "" && package.description != "" && package.price != nil%>
    <li class="nav-item">
      <a class="nav-link <%= "active" if package.pack_type == "basic" %>" id="<%= package.pack_type %>-tab" data-toggle="tab" href="#<%= "#{package.pack_type}"%>" role="tab" aria-selected="<%=package.pack_type == "basic"? "true" : "false" %>"><%= @types[n] %></a>
    </li>
  <% else %>
    <% break %>
  <% end %>
<% end  %>
</ul>


  <div class="tab-content bd bd-gray-300 bd-t-0 pd-20 rounded-bottom" id="packagesContent">
    <%puts @no_package %>
    <%= "Sin paquetes" if @gig.gig_packages.empty? %>
    <%= render @gig.gig_packages %>
  </div>
