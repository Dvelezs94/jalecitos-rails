<% gig_description = @gig.description.html_safe %>
<div class="innerpage-leftsidejata">
  <div class="verificos-title">
    <h3><%= @gig.title %></h3>
    <p><%= @gig.location %></p>
  </div>

  <div class="gig-images-container">
    <div class="owl-carousel gig-show-carousel">
      <% if @gig.images.count > 0 %>
        <% @gig.images.each do |image| %>
          <div class=''>
            <%= image_tag( image.url, class: 'img-responsive', data: {lity: true}) %>
          </div>
        <% end %>
      <% else %>
        <div class="">
          <%= image_tag( "https://s3.us-east-2.amazonaws.com/cdn.jalecitos.com/images/app_images/gig-no-image-2.png", class: 'img-responsive', data: {lity: true})%>
        </div>
      <% end %>
    </div>

    <div class="pacificobg-socialicon">
      <div class="arroweee">
        <a href="">
          <%= link_to icon("fas", "arrow-left"), 'javascript:history.go(-1);' %>
        </a>
      </div>
      <% if current_user != @gig.user %>
      <div class="other_gig_actions">

        <div class="hearted1 likes-<%= @gig.slug %>">
          <%= render "gigs/likes", gig: @gig %>
        </div>
        <%= link_to icon("fas", "share-alt", title: "Compartir"), {}, id: "share" %>
        <% if user_signed_in? %>
          <%= icon("fas", "flag", class: "fa-lg gig_action_icon cursor_pointer", title: "Reportar", id: "reportgigbtn") %>
        <% end %>
      </div>
      <% else %>
        <%= render "shared/gigs/show/gig_actions" %>
      <% end %>
    </div>
    <% if @gig.user.verified %>
      <div class="varificado-btn3">
        <a href="">VERIFICADO</a>
      </div>
    <% end %>

  </div>

  <div class="perfil-area">
    <div class="profileview1">
      <div class="profileview-total">
        <%= image_tag(@gig.user.image_url(:thumb)) %>
        <span><%= link_to @gig.user.alias, user_path(@gig.user.slug) %></span>
        <%= "#{icon("fas", "check-square", title: "Verificado")}".html_safe if @gig.user.verified %>
      </div>
    </div>
  </div>

  <div class="sedcontent-wrap">
    <div class="sed-content">
      <h3><%= @gig.title %></h3>
      <p><%= @gig.location %></p>
      <br>
      <p><%= gig_description %></p>
      <br>
    </div>

  </div>

  <!-- for768 -->

  <div class="califico-about nulla">
    <p><%= gig_description %></p>
  </div>
</div>

<!-- for992 -->

<div class="califico-about">
  <p><%= gig_description %></p>
</div>
