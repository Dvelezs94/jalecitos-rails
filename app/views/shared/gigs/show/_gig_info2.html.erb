<% gig_safe_desc = @gig.safe_description %>
<% gig_title = @gig.safe_title %>

<h1><%= gig_title %></h1>
<p class="tx-gray-500"><%= "#{@gig_hits} Vistas" %> ● <%= "#{@gig.likes.length} Me gusta" %></p>
<div class="d-flex justify-content-between align-items-center">
  <div>
    <span class="d-mobile-none d-md-inline">A unos <b><%= distance(@gig, current_user.lat, current_user.lng) %></b> de ti</span>
    <button type="button" class="btn btn-xs btn-outline-success mg-md-l-5" data-toggle="modal" data-target="#mapModal"><i data-feather="map"></i> Ver en Mapa</button>
  </div>
  <span>
    <%= link_to "Compartir", {}, class: "share_item_url btn btn-xs btn-outline-primary" %>
    <a href="" class="link-01" id="moreMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i data-feather="more-vertical"></i></a>
    <div class="dropdown-menu" aria-labelledby="moreMenuButton">
        <%= render("gigs/likes", gig: @gig, with_number: false, gig_show: true) if current_user %>
        <%= link_to "#", class: "dropdown-item", data: {toggle: "modal", target: "#reportModal"} do %>
          <i data-feather="flag"></i> Reportar
        <% end %>
    </div>
  </span>
</div>

<div class="row row-xs mg-sm-t-10 mg-b-10 mg-t-15">
  <div class="col-12">
    <div id="carouselExample2" class="carousel slide" data-ride="carousel" data-interval="false">
      <div class="carousel-inner gig-show-picture bg-black-8">

        <% if @gig.youtube_url.present? %>
        <div class="carousel-item gig h-100 active">
          <%=  YouTubeRails.youtube_embed_url(@gig.youtube_url,"100%", "100%", ssl: true, disable_suggestion: true).html_safe %>
        </div>

        <% end %>
        <!-- Slides -->
        <% if @gig.images.count > 0 %>
          <% @gig.images.each_with_index do |image, index| %>
            <div class="carousel-item gig <%= "active" if @gig.youtube_url.blank? && index == 0 %>">
              <%= image_tag( image.url, data: {lity: true}) %>
            </div>
          <% end %>
        <% else %>
          <div class="carousel-item gig active">
            <%= image_tag( "https://s3.us-east-2.amazonaws.com/cdn.jalecitos.com/images/app_images/gig-no-image-2.png", data: {lity: true})%>
          </div>
        <% end %>

        <!-- more items goes here -->
      </div>
      <a class="carousel-control-prev" href="#carouselExample2" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"><i data-feather="chevron-left"></i></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExample2" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"><i data-feather="chevron-right"></i></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

</div>

<p><%= gig_safe_desc %></p>

<div class="accordion" id="gig-show-accordion">
  <%= render partial: "faqs/faq", collection: @gig.faqs %>
</div>

<div class="divider-text w-100">
  <% if @gig.score_times == 0 %>
