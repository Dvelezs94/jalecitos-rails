<div class="container page3slides-area3">
    <div class="page3slide-titles1">
      <h2><%= title %></h2>
    </div>


    <div class="gig-req-carousel <%= param_name %>">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
            <!-- Slides -->
          <% if param_name == :popular_gigs %>
            <%= render gigs.results.shuffle %>
          <% else %>
            <%= render gigs %>
          <% end %>
          <% if gigs.next_page %>
              <div class="swiper-slide">
                <%= link_to_next_page(gigs, "Oculto".html_safe,
                   class: "carousel-paginator" , param_name: param_name,
                    :params => {:current => param_name}, remote: true, style: "display: none;") %>
              </div>
          <% end %>
        </div>
    </div>

</div>
