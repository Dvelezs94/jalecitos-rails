<!-- Tablet mobile top ber Start -->
<div class="tablet-mobile-top-ber">
  <div class="container">
    <div class="row">
      <div class="col-3">
        <div class="tablet-mobile-input">
          <div class="mobile-input-icon">
            <% if (@gig.present? && @gig.name.present? && current_page?( gig_path(city_slug(@gig.city),@gig))) || (@request.present? && @request.name.present? && current_page?( request_path(@request) )) %>
            <i class="fa fa-arrow-left" aria-hidden="true" onclick="javascript:history.go(-1);"></i>
            <% else %>
            <a class="menu-open" id="menu-open" href="<%= user_mobile_search_path %>">
              <i class="fa fa-search"></i>
            </a>
            <% end %>
          </div>
        </div>
      </div>
      <% if @gig.present? && current_page?( gig_path(city_slug(@gig.city),@gig) ) %>
      <div class="col-9 text-right">
        <div class="tablet-mobile-user">
          <% if current_user != @gig.user %>
          <div class="other_gig_actions">
            <div class="hearted1 likes-<%= @gig.slug %>">
              <%= render "gigs/likes", gig: @gig, with_number: false %>
            </div>
            <%= link_to icon("fas", "share-alt", title: "Compartir"), {}, id: "share" %>
            <% if user_signed_in? %>
              <%= icon("fas", "flag", class: "gig_action_icon cursor_pointer reportgig", title: "Reportar", id: "reportgigbtn") %>
            <% end %>
          </div>
          <% else %>
            <%= render "shared/gigs/show/gig_actions" %>
          <% end %>
        </div>
      </div>
      <% elsif @request.present? && @request.name.present? && current_page?( request_path(@request) ) %>
      <div class="col-9 text-right">
        <div class="tablet-mobile-user">
          <% if current_user != @request.user %>
          <div class="other_gig_actions">
            <%= link_to icon("fas", "share-alt", title: "Compartir"), {}, id: "share" %>
            <% if user_signed_in? %>
              <%= icon("fas", "flag", class: "gig_action_icon cursor_pointer reportreq", title: "Reportar", id: "reportrequestbtn") %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
      <% else %>
      <div class="col-6 justify-content-center text-center" style="display:flex;align-items:center;">

        <%= form_with model: User, url: update_users_path, method: :put , local: true do |f|%>
        <nav style="display:flex;justify-content:center;align-items:center;">
          <%= f.text_field :location, class: 'mobile_menu_autocomplete', id: "mobile_menu_autocomplete",
          size: 50, placeholder: raw("&#xf3c5;") + " UbicaciÃ³n",
          value: (current_user.location(true).present?)? "&#xf3c5; #{current_user.location}".html_safe : "",
          style: "font-family: 'Font Awesome 5 Free' !important;font-weight:900;" %>
          <%# without submit button so the form cant be submitted if one option is not selected %>
          <%= f.hidden_field :city_id, class: "city" %>
        </nav>
        <% end %>

      </div>
      <div class="col-3 text-right">
        <div class="tablet-mobile-user">
          <%=link_to image_tag(avatar_display_helper(current_user.image_url(:thumb)), class: "user_pic", lazy: true, id: "user_pic"), my_account_users_path%>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
