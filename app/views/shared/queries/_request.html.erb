<div class="mg-t-10 mg-l-5 mg-r-10 req-card" loaded_in_map="false" lat="<%= request.lat %>" lng="<%= request.lng %>" title="<%= request.title %>">
  <div class="card">
    <%= link_to request_path(request.slug), class: "black-100" do %>
    <div class="card-body pd-b-5-f pd-t-10-f" onclick="goToElement($(this).closest('[loaded_in_map]')[0])">
      <small class="tx-gray-600">Publicado hace <%= distance_of_time_in_words_to_now(request.created_at) %></small>
      <p class="card-title tx-16 text-break"><%= request.title %></p>
      <div class="d-flex justify-content-between align-items-center">
        <small><%= request.offers_count %> ofertas</small>
        <small><strong><%= request.budget %></strong></small>
      </div>
    </div>
    <% end %>
    <div class="card-footer d-flex justify-content-between" hide-on-map>
      <%= link_to request_path(request.slug), class: "share_item_url" do %>
        Compartir
      <% end %>
      <%= link_to "#", onclick: "goToElement($(this).closest('[loaded_in_map]')[0])", class: "d-768-none" do %>
        Mapa <i data-feather="chevron-right" class="feather-12 d-none d-md-inline"></i>
      <% end %>
    </div>
  </div>
</div>
