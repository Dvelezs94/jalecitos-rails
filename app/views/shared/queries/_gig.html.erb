<div class="card mg-t-10 gig-card mg-r-10 mg-l-5 mg-md-r-10 d-block position-static" loaded_in_map="false" lat="<%= gig.lat %>" lng="<%= gig.lng %>" title="<%= gig.min_title %>">
  <div class="card-horizontal mg-5">
    <div class="w-40" hide-on-map>
      <%= link_to the_gig_path(gig) do %>
      <%= image_tag( image_display_helper(default_gig_img(gig.images), gig.youtube_url), class: "card-img gig-card-horizontal w-100 h-100", lazy: true) %>
      <% end %>
    </div>
    <div class="card-body pd-b-5-f w-60">
      <%= link_to the_gig_path(gig), class: "d-flex flex-wrap black-100" do %>
      <span class="media col-12 pd-l-0">
        <div class="avatar avatar-sm mn-w-32">
          <%= image_tag(avatar_display_helper(gig.user.image_url(:thumb)), class: "rounded-circle", style: "", lazy: true) %>
        </div>
        <div class="media-body mg-l-5 mw-100">
          <h6 class="mg-b-0 truncate"><%= gig.user.alias %></h6>
          <small class="d-block tx-gray-600 truncate">Activo hace <%= distance_of_time_in_words_to_now(gig.user.current_sign_in_at) %></small>
        </div><!-- media-body -->
      </span>

      <p class="card-title mg-t-10 mg-b-5 tx-16  break-word"><%= gig.min_title %></p>
      <div class="d-flex justify-content-between align-items-center b-0 col-12 align-self-end">
        <div>
          <%= one_star_disp_help gig %>
        </div>
        <small class="green-100">Desde <strong><%= query_home_or_profile_helper(gig) %></strong></small>
      </div>
      <% end %>
      <div class="d-flex justify-content-between align-items-center mg-t-10 col-12 align-self-end" hide-on-map>
        <%= render("gigs/likes", gig: gig, with_number: false) if current_user && current_user != gig.user %>
        <%= link_to the_gig_path(gig), class: "share_item_url" do %>
          Compartir
        <% end %>
        <%= link_to "#", onclick: "goToElement($(this).closest('[loaded_in_map]')[0])", class: "d-768-none" do %>
          Mapa <i data-feather="chevron-right" class="feather-12 d-none d-md-inline"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
