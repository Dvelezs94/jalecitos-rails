      <h4>Por Creacion</h4>
      <%= line_chart User.group_by_day(:created_at).count %>
    </div>
    <div class="col-10 col-sm-12 col-md-12 col-lg-6 text-center mar-0-auto">
      <h4>Por Edad</h4>
      <%= column_chart User.group_by_year(:birth).count %>
    </div>
    <div class="col-10 col-sm-12 col-md-12 col-lg-6 text-center mar-0-auto">
      <h4>Por Ciudad</h4>
      <%= bar_chart City.joins(:users).group(:name).count %>
    </div>
  </div>
