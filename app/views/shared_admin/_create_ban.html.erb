<div class="modal" id="createBan">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content-transparent">
      <div class="modal-body">
        <div class="sign-up">
          <div class="sign-up-form">
             <h2>Bloquear el recurso</h2>
            <%= form_with(model: Ban, url: bans_path, method: :post, :html => { :class => "ban_form", id: "createBanForm" }, remote: true) do |f| %>
            <%= f.select :cause, report_options, {include_blank: "Causa del bloqueo"}, class: "custom-select required", id: "ban_cause" %>
            <%= f.text_field :comment, placeholder: "(Opcional) Comentarios", autocomplete: "off" %>
            <br>
            <%= f.submit 'Continuar', :class => 'btn continue-button w-100' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
