<h2>Verificaciones</h2>
<div class="table-responsive paginator_container">
  <table class="admin-table table table-striped table-sm">
    <thead>
      <tr>
        <th>Usuario</th>
        <th>Estado</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="paginated_verifications">
      <%= render partial: 'admins/verification', collection: @verifications %>
    </tbody>
  </table>
  <%= paginate @verifications, param_name: :verification, :params => {:current => :verification} %>
</div>
