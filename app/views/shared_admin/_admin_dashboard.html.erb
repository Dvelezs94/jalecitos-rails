      <div class="wrapper">
        <nav class="sidebar">
          <div class="sidebar-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link_to content_tag("span", " Gigs", class: "nav-link fe fe-app-menu"), root_path %>
              </li>
              <li class="nav-item">
                <%= link_to content_tag("span", " Categories", class: "nav-link fe fe-list-bullet"), root_path %>
              </li>
              <li class="nav-item">
                <%= link_to content_tag("span", " Users", class: "nav-link fe fe-user"), root_path %>
              </li>
              <li class="nav-item">
                <%= link_to content_tag("span", " Reports", class: "nav-link fe fe-file"), root_path %>
              </li>
              <li class="nav-item">
                <%= link_to content_tag("span", " Integrations", class: "nav-link fe fe-layer"), root_path %>
              </li>
            </ul>
          </div>
        </nav>
        <div class="content">
          <main role="main" class="col-md-8">
            <h2>Gigs</h2>
            <div class="table-responsive">
              <table class="table table-striped table-sm">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>Image</th>
                    <th>Date</th>
                    <th>Balance</th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <%= render partial: 'gigs/gig_dashboard', collection: @gigs %>
                </tbody>
              </table>
              <%= paginate @gigs, param_name: :gig_page %>
            </div>
        </main>
        <main role="main" class="col-md-2">
            <h2>Categories <%= link_to content_tag("span", "", class: "fe fe-plus"), new_category_path %></h2>
            <div class="table-responsive">
              <table class="table table-striped table-sm">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                    <%= render @categories %>
                </tbody>
              </table>
              <%= paginate @categories, param_name: :category_page %>
            </div>
          </main>

          <main role="main" class="col-md-4">
              <h2>Users</h2>
              <div class="table-responsive">
                <table class="table table-striped table-sm">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Role</th>
                    </tr>
                  </thead>
                  <tbody>
                      <%= render partial: 'users/user_dashboard', collection: @users %>
                  </tbody>
                </table>
                <%= paginate @users, param_name: :user_page %>
              </div>
            </main>
        </div>

      </div>
