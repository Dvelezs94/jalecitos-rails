  </div>

  <div class="col-lg-6 col-md-6 col-sm-6 col-6">
     <!-- # rating_for @user, "Employee", readonly: true, half_show: true, stars: 5  -->
    <!-- <h5 data-tooltip=" rating_for(@user, "Employee", number_only: true) >Proveedor</h5> -->
  </div>
  <!-- -->

  <!-- -->
</div>
