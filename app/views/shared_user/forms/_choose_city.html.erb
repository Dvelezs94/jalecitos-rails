<% object = (params[:controller] == "requests")? @request : @gig %>
<div>
  <div class="custom-control custom-radio">
    <input type="radio" class="custom-control-input choose_or_any" id="anyCity" name="chooseoranycity"
    <%= "checked" if ( params[:action] == "create" && params[model][:city_id] == "") || ( params[:action] == "update" && object.city_id.nil? ) || (params[:action] == "edit" && object.city_id.nil?) || (params[:action] == "new" && !current_user.location(true)) %>>
    <label class="custom-control-label" for="anyCity">Cualquier ciudad de MÃ©xico</label>
  </div>
  <div class="custom-control custom-radio">
    <input type="radio" class="custom-control-input choose_or_any" id="chooseCity" name="chooseoranycity"
    <%= "checked" if ( params[:action] == "create" && params[model][:city_id] != "" )|| ( params[:action] == "update" && object.city_id.present? ) || ((params[:action] == "edit" && object.city_id.present?)) || (params[:action] == "new"  && current_user.location(true)) %> >
