             <div class="sign-up-form">
               <!-- Close modal -->
                 <div class="close-modal" onclick="$('#changePasswordModal').hide()">
                   <span aria-hidden="true">Cerrar</span>
                 </div>
               <!--  -->
               <h3>Cambiar contrase単a</h3>
               <div class="divi-new js-form-join-section" data-section="1"></div>
               <%= form_with model: @user, url: user_registration_path, html: { method: :put } do |f| %>
                   <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Contrase単a nueva"  %>
                   <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Confirmar contrase単a nueva"  %>
                   <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: "Contrase単a actual"  %>
                   <%= f.submit "Actualizar", class: 'btn btn-block btn-success' %>
                 </div>
               <% end %>
             </div>
         </div>
      </div>
    </div>
  </div>
</div>
