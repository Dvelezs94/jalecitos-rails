<div class="modal" id="inModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
         <div class="sign-up">
           <div class="modal-logo">
               <img src="https://s3.us-east-2.amazonaws.com/cdn.jalecitos.com/images/Logo+PNG.png" alt="">
           </div>
             <div class="sign-up-form">
                 <div class="nueva">
                     <h3>Inicia sesión</h3>
                     <%= button_to user_facebook_omniauth_authorize_path(lat:"latitude", lon:"longitude"), form_class: 'facebook-login', :data => { :disable_with => "<i class='fa fa-spinner fa-spin'></i> Entrando..." } do %>
                     <%= icon("fab", "facebook-square") + " Facebook" %>
                     <% end %>
                 </div>
                 <%= form_for(:user, :html => { :class => "sign_in_form" }, :url => session_path(:user)) do |f| %>
                   <div class="information" style="margin-bottom: 20px;">
                     <%= f.email_field :email, placeholder: "Correo", class: "required", value: "", autocomplete: :off, autofocus: true, onfocus: "getLocation();" %>
                     <%= f.password_field :password, placeholder: "Contraseña" , class: "required" %>
                     <div class="remember_me" style="display:flex;justify-content:center;align-items:center;">
                       <%= f.check_box :remember_me %>
                       Recordarme
                     </div>
                   </div>
                   <%= f.button 'Continuar', class: "default-btn signup-continue", :data => { :disable_with => "<i class='fa fa-spinner fa-spin'></i> Entrando..." } %>
                  <p class="una"><%= link_to "Olvidé mi contraseña", new_password_path(:user) %></p>
                   <p class="una">¿No tienes cuenta?  <%= link_to "Regístrate", {}, id: "register" %></p>
                 <% end %>
             </div>
         </div>
      </div>
    </div>
  </div>
</div>
