<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
    <% @gig.faqs.each_with_index do |faq, index| %>
    <%= "," if index != 0 %>{
      "@type": "Question",
      "name": "<%= faq.question %>",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "<%= faq.answer %>"
      }
    }
    <% end %>
    ]
  }
</script>
