<%= form_with(model: offer, url: offer_form_url_helper, local: true) do |form| %>
  <% if offer.errors.any? %>
  <%offer.errors.full_messages.each do |error| %>
    <%= notification_generator_helper error, :error %>
  <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :description %>

    <%= form.text_field :description, class: 'form-control', id: "description", type: "hidden" %>
    <trix-editor input="description" placeholder="Por favor describe por que serias la mejor opcion para este proyecto"></trix-editor>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>


  <div class="form-group">
    <%= form.label :hours %>
    <%= form.number_field :hours %>
  </div>

  <div class="form-group">
    <%= form.submit "Continuar",  class: "btn btn-primary btn-block" %>
  </div>
<% end %>
