<%= form_with(model: offer, url: offer_form_url_helper, method: form_method_helper, local: true, :html => { class: "current_form" }) do |form| %>
<% if offer.errors.any? %>
  <%offer.errors.full_messages.each do |error| %>
    <%= notification_generator_helper error, :error %>
  <% end %>
<% end %>
<div class="container-fluid section request_post_form">
  <div class="container">
    <div class="row">
      <div class="col-lg-7 col-md-12 centered-form">
        <h3>Ofertar</h3>
        <div class="form_box post_form_col">

          <div class="col-lg-12  col-md-12">
            <p>Descripción:</p>
          </div>
          <div class="form_block row">
            <div class=" col-lg-1 col-md-1 col-sm-1 col-1">
              <%= fa_icon "sticky-note", class: "fa-2x" %>
            </div>
            <div class="row col-lg-11 col-md-11 col-sm-11 col-11">
              <%= form.text_field :description, class: 'form-control', id: "description", type: "hidden" %>
              <trix-editor input="description" class="trix-class trix_input_0 required" maxlength="1000" placeholder="Por favor, describe por qué serías la mejor opción para este proyecto."></trix-editor>
            </div>
          </div>
          <hr>
          <div class="col-lg-12  col-md-12">
            <p>Horas estimadas (<strong>Opcional</strong>):
            </p>
          </div>

          <div class="form_block row">
            <div class=" col-lg-1 col-md-1 col-sm-1 col-1">
              <%= fa_icon "hourglass-end", class: "fa-2x" %>
            </div>
            <div class=" col-lg-11 col-md-11 col-sm-11 col-11">
              <%= form.number_field :hours, class: 'form-control' %>
            </div>
          </div>
          <hr>
          <div class="form_block row">
            <div class="row will-earn justify-content-center col-lg-6 col-md-6 col-sm-12 col-12">
              <strong class="price-text">Lo que ganaré:</strong>
              <div class="row justify-content-center">
                <%= fa_icon "dollar", class: "fa-2x", id: "price-symbol" %>
                <%= form.number_field :price, options ={min: 100, step:".01", class: "price-input price-input-0 form-control"} %>
              </div>
            </div>
            <div class="row will-show col-lg-6 col-md-6 col-sm-12 col-12 row">
              <strong class="price-text">Se mostrará:</strong>
              <label id="price-calc-0" class="label-price"></label>
            </div>
          </div>

          <hr>
          <div class="col-lg-12  col-md-12 end-buttons">
            <div class="col-lg-6  col-md-6 ">
              <%= link_to 'Cancelar', request_path(params[:request_id]), :data => {:confirm => 'Tu progreso hasta ahora NO se guardará'}, class: "btn btn-danger" %>
            </div>
            <div class="col-lg-6  col-md-6 ">
              <%= form.submit "Ofertar", class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
