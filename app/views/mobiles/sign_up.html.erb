<div class="modal-dialog-centered">
    <div class="modal-mobile">
      <div class="modal-body">
         <div class="sign-up">
             <div class="modal-logo">
                 <img src="https://s3.us-east-2.amazonaws.com/cdn.jalecitos.com/images/Logo+PNG.png" alt="">
             </div>
             <div class="sign-up-form">
                 <div class="nueva">
                     <h3>Crea una nueva cuenta</h3>
                     <%= link_to icon("fab", "facebook")+" facebook", user_facebook_omniauth_authorize_path(lat:"latitude", lon:"longitude"), class: 'facebook-login', method: :post %>
                 </div>
                 <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                   <%= devise_error_messages! %>
                   <%= f.email_field :email, placeholder: "Correo", id: "user_email_new", class: "required", autocomplete: "email", autofocus: true, onfocus: "getLocation();" %>
                   <% if @minimum_password_length %>
                   <em>(<%= @minimum_password_length %> characters minimum)</em>
                   <% end %>
                   <%= f.password_field :password, placeholder: "Nueva contraseña", id: "user_password_new", class: "required", autocomplete: "new-password" %>
                   <%= f.password_field :password_confirmation, placeholder: "Confirmar contraseña", id: "user_password_conf_new", class: "required", autocomplete: "new-password" %>
                   <%= hidden_field_tag :sign_up_lat, value = '' %>
                   <%= hidden_field_tag :sign_up_lon, value = '' %>
                   <%= hidden_field_tag :from_mobile, value = 'true' %>
                   <div class="row justify-content-center">
                     <%= recaptcha_tags %>
                   </div>
                   <%= f.submit 'Continuar' %>
                   <p class="una">¿Ya tienes una cuenta?  <%= link_to "Inicia sesión", mobile_sign_in_path %></p>
                 <% end %>
                 <br>
                 <p>Al continuar aceptas los <%= link_to "Terminos y Condiciones", terminos_y_condiciones_path, target: "_blank" %> asi como el <%= link_to "Aviso de Privacidad", aviso_de_privacidad_path, target: "_blank" %></p>
             </div>
         </div>
      </div>
    </div>
  </div>
