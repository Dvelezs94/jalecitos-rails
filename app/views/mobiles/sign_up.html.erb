<div class="container">
  <div class="content-container">
    <%= form_for(resource, :as => resource_name, :html => { :class => "sign_up_form" }, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <label for="email">E-mail</label><br>
      <%= f.email_field :email, placeholder: "Correo", id: "user_email_new", class: "required", autocomplete: "email", autofocus: true, onfocus: "getLocation();" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <label for="password">Contraseña</label><br>
      <%= f.password_field :password, placeholder: "Nueva contraseña", id: "user_password_new", class: "required", autocomplete: "new-password" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirmar contraseña", id: "user_password_conf_new", class: "required", autocomplete: "new-password" %>
      <%= hidden_field_tag :sign_up_lat, value = '' %>
      <%= hidden_field_tag :sign_up_lon, value = '' %>
      <%= hidden_field_tag :from_mobile, value = 'true' %>
      <%= recaptcha_tags %>
      <br>
      <%= f.submit 'Continuar', :class => 'login' %>
      <br>
    <% end %>
    <%= link_to icon("fab", "facebook-square"), user_facebook_omniauth_authorize_path(lat:"latitude", lon:"longitude"), class: 'media fb loginBtn loginBtn--facebook', method: :post %>
    <p>Al unirme, acepto los terminos y condiciones de Jalecitos</p>
    <%= link_to "Ya tengo una cuenta", mobile_sign_in_path %>
  </div>
</div>
