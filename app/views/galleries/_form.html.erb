<%= form_with(model: gig,url: user_gig_galleries_path(current_user.slug, gig), method: :post, :html => { :id => "new_image" }, local: false) do |form| %>
<% if gig.errors.any? %>
  <%gig.errors.full_messages.each do |error| %>
    <%= notification_generator_helper error, :error %>
  <% end %>
<% end %>
<!-- ---post request form -->
<div class="container-fluid section request_post_form">
  <div class="container">
    <div class="row">
      <div class="col-lg-7 col-md-12 centered-form">
        <h3>Agrega tu galería de imágenes</h3>
        <div class="form_box post_form_col">

          <div class="col-lg-12  col-md-12">
            <p>Imágenes a subir(<strong>Opcional</strong>):</p>
          </div>
          <div class="container row current_images">
            <%= render partial: "galleries/image", collection: @gig.images %>
          </div>
          <div class="form_block row col-lg-12">
              <%= form.file_field :images, multiple: true, id: "file-input", accept: ".png, .jpg, .jpeg"%>
              <%= render 'shared_user/gigs/forms/hints/images_hint.html.erb' %>
          </div>
          <div class="loading row justify-content-center" style="text-align: center; display: none;">
            <%= image_tag('loading.gif') %>
          </div>

            <hr>

          <!-- 3 end -->
          <div class="row">

            <div class="col-lg-12  col-md-12 end-buttons">
              <div class="col-lg-6  col-md-6 ">
                <%= link_to 'Cancelar', user_path(current_user.slug), :data => {:confirm => 'Tu progreso hasta ahora NO se guardará'}, class: "btn btn-danger" %>
              </div>
              <div class="col-lg-6  col-md-6 ">
              <%= link_to 'Continuar', edit_user_gig_packages_path(current_user.slug, gig ), class: "btn btn-success", onclick: "return (window.sentImages==0)? true: false" %>

              </div>
            </div>
          </div>
        </div>
        <!-- form box -->
        <!-- -->
      </div>
      <!-- -->
    </div>
    <!-- col lg 7 -->
  </div>
</div>
<!-- container fluid -->

<% end %>
