<div class="container-fluid section ">
<!-- post request form -->
  <div class="container">
    <div class="row">
      <div class="col-lg-7 col-md-12 centered-form">
        <h3 style="text-align: center;">Agrega tu galería de imágenes y video</h3>
        <div class="form_box post_form_col">
          <%= form_with(model: Gig, url: create_video_galleries_path, method: :post, :html => { :id => "new_video" }, local: false) do |form| %>
          <div class="form_block form_section row">
            <div class="flex-space-bet">
              <p class="form-title">Video de Youtube (<strong>Opcional</strong>)</p>
              <%= icon("fas", "question-circle", class: "question_hint toggler") %>
            </div>
              <%= render 'shared_user/gigs/forms/hints/videos_hint.html.erb' %>
              <%= form.text_field :youtube_url, class: "styled", maxlength: 100, placeholder: "Ej: https://www.youtube.com/watch?v=fTjhQc6Yiy0" %>
          </div>
          <% end %>

          <%= form_with(model: Gig, url: galleries_path, method: :post, :html => { :id => "new_image" }, local: false) do |form| %>
          <div class="form_block form_section row">
            <div class="flex-space-bet">
              <p class="form-title">Imágenes a subir (<strong>Opcional</strong>)
              </p>
              <%= icon("fas", "question-circle", class: "question_hint toggler") %>
            </div>
            <%= render 'shared_user/gigs/forms/hints/images_hint.html.erb' %>
            <div class="current_images" style="display:flex;width:100%;flex-wrap:wrap;">
              <%= render partial: "galleries/image", collection: @gig.images %>
            </div>

            <div style="width:100%;text-align:center;">
              <label for="file-input" class="custom-file-upload" style="margin: 20px auto;height:30px;">
                Subir imágenes
              </label>
            </div>
              <%= form.file_field :images, multiple: true, id: "file-input", accept: ".png, .jpg, .jpeg, .gif", style: "display:none;"%>
          </div>
          <div class="loading row justify-content-center" style="text-align: center; display: none;">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
          </div>

        </div>
        <!-- form box -->
        <!-- -->
      </div>
      <!-- -->
    </div>
    <!-- col lg 7 -->
  </div>
</div>
<!-- container fluid -->

<% end %>
