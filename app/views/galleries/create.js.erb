//one response given
ajaxRecieved();
//if is the last, hide loading
if (window.sentRequests == 0){
  $(".loading").hide();
}
//do the render
<% if @success %> //loads an image
  $(".current_images").append("<%= j render partial: 'galleries/image', collection: [@item.images.last] %>");
<% elsif @next %> //clicks next form
  //so dont do nothing
<% elsif @req_end %> //request end
<% if request.referrer.include?("/edit?") %>
  <% flash[:notice] = 'Tu pedido se ha actualizado.' %>
<% else %>
  <% flash[:notice] = 'Has concluido el proceso.' %>
<% end %>
  window.location = "<%= request_path(@item) %>"
<% else %>
  alert("<%= j @item.errors[:images][0].html_safe %>");
<% end %>
